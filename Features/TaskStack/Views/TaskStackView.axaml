<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:TaskStack.Features.TaskStack.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:TaskStackViewModel"
             x:Class="TaskStack.Features.TaskStack.Views.TaskStackView">
    <Grid RowDefinitions="50, *">
        <DockPanel>
            <TextBlock DockPanel.Dock="Left" FontSize="24" FontWeight="Bold" Padding="12,0" VerticalAlignment="Center" Text="{Binding Title}"/>
            <Button DockPanel.Dock="Left">Edit</Button>
            <Button DockPanel.Dock="Right" HorizontalAlignment="Right" Padding="12,0" Command="{Binding DeleteTaskCommand}">Delete</Button>
        </DockPanel>
    </Grid>
</UserControl>
