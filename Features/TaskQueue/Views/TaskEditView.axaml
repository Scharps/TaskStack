<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:TaskStack.Features.TaskQueue.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:TaskViewModel"
             x:Class="TaskStack.Features.TaskQueue.Views.TaskEditView"
             >
    <TextBox x:Name="TitleTextBox" Text="{Binding Title}" LostFocus="TitleTextBox_OnLostFocus"
             KeyDown="TitleTextBox_OnKeyDown" HorizontalAlignment="Stretch" Padding="4"
             VerticalContentAlignment="Center"/>
</UserControl>